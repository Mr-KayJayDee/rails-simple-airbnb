<div class="container mt-4">
  <h1>All Flats</h1>
  
  <%= form_tag(flats_path, method: :get, class: "mb-3") do %>
    <div class="input-group">
      <%= text_field_tag :q, params[:q], class: "form-control", placeholder: "Search for flats..." %>
      <div class="input-group-append">
        <%= submit_tag "Search", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <!-- Placeholder for the Unsplash image -->
          <img src="https://source.unsplash.com/random/300x200" class="card-img-top" alt="Flat Image">
          <div class="card-body">
            <h5 class="card-title"><%= link_to flat.name, flat_path(flat) %></h5>
            <p class="card-text"><strong>Price per Night:</strong> <%= flat.price_per_night %></p>
            <p class="card-text"><strong>Number of Guests:</strong> <%= flat.number_of_guests %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
  <%= link_to 'New Flat', new_flat_path, class: 'btn btn-primary mt-3' %>
</div>
