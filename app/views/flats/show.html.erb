<!-- app/views/flats/show.html.erb -->
<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      <img src="https://source.unsplash.com/random/600x400" class="img-fluid rounded" alt="Flat Image">
    </div>
    <div class="col-md-6">
      <h1><%= @flat.name %></h1>
      <p><strong>Address:</strong> <%= @flat.address %></p>
      <p><strong>Description:</strong> <%= @flat.description %></p>
      <p><strong>Price per Night:</strong> <%= @flat.price_per_night %></p>
      <p><strong>Number of Guests:</strong> <%= @flat.number_of_guests %></p>
      <%= link_to 'Edit', edit_flat_path(@flat), class: 'btn btn-primary' %>
      <%= link_to 'Back to List', flats_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
